<%= form_for @event, :html => { :class => "form-horizontal event" } do |f| %>

  <% if @event.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

    <div class="form-group">
    <%= f.label :name, :class => 'control-label col-sm-2' %>
    <div class="col-sm-8">
      <%= f.text_field :name, :class => 'form-control' ,placeholder: 'Name of the Event', autofocus: 'true' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :event_desc, :class => 'control-label col-sm-2' %>
    <div class="col-sm-8">
      <%= f.text_area :event_desc, :class => 'form-control' ,placeholder: 'Describtion of the Event', autofocus: 'true'%>
    </div>
    <%=f.error_span(:event_desc) %>
  </div>
  <div class="form-group">
    <%= f.label :province, :class => 'control-label col-sm-2' %>
    <div class="col-sm-8">
      <%= f.text_field :province, :class => 'form-control',placeholder: 'Name of the Province', autofocus: 'true' %>
    </div>
    <%=f.error_span(:province) %>
  </div>
  <div class="form-group">
    <%= f.label :city, :class => 'control-label col-lg-2' %>
    <div class="col-sm-8">
      <%= f.text_field :city, :class => 'form-control',placeholder: 'Name of the City', autofocus: 'true' %>
    </div>
    <%=f.error_span(:city) %>
  </div>
  <div class="form-group">
    <%= f.label :suburb, :class => 'control-label col-sm-2' %>
    <div class="col-sm-8">
      <%= f.text_field :suburb, :class => 'form-control' ,placeholder: 'Name of the Surburb', autofocus: 'true'%>
    </div>
    <%=f.error_span(:suburb) %>
  </div>
  <div class="form-group">
    <%= f.label :establishment, :class => 'control-label col-sm-2' %>
    <div class="col-sm-8">
      <%= f.text_field :establishment, :class => 'form-control' ,placeholder: 'Name of an Establishment', autofocus: 'true'%>
    </div>
    <%=f.error_span(:establishment) %>
  </div>


  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                events_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
