<%- model_class = Event -%>
<div class="page-header">
  <h1 align="center"><%=t '.title',:default => [:'helpers.titles.all', 'All %{model}'], :model => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:event_desc) %></th>
      <th><%= model_class.human_attribute_name(:province) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:suburb) %></th>
      <th><%= model_class.human_attribute_name(:establishment) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.id, event_path(event) %></td>
        <td><%= event.name %></td>
        <td><%= event.event_desc %></td>
        <td><%= event.province %></td>
        <td><%= event.city %></td>
        <td><%= event.suburb %></td>
        <td><%= event.establishment %></td>
        <td><%= event.user_id %></td>
        <td><%=l event.created_at %></td>
        <td>
          <div class="row">
            <div class="col-xs-4">
              <%= link_to t('.show', :default => t("helpers.links.show")),
                          event_path(event), :class => 'btn btn-default btn-md' %>
            </div>
            <div class="col-xs-4">
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_event_path(event), :class => 'btn btn-default btn-md' %>
            </div>
            <div class="col-xs-4">
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          event_path(event),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-md btn-danger' %>
            </div>

          </div>



        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_event_path,
            :class => 'btn btn-primary' %>
